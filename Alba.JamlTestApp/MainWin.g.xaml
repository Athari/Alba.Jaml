<Window
    x:Name="root"
    Title="JamlMainWindow"
    Width="500"
    Height="300"
    SnapsToDevicePixels="True"
    TextOptions.TextFormattingMode="Display" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    x:Class="Alba.JamlTestApp.MainWin" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation">
    <Window.Resources>
        <Style
            x:Name="stybtnRed"
            TargetType="Button">
            <_
                Background="Red" />
            <_
                Foreground="Blue" />
        </Style>
        <DataTemplate
            x:Name="system:String">
            <TextBlock
                Foreground="Purple"
                FontWeight="Bold" />
        </DataTemplate>
    </Window.Resources>
    <Grid
        x:Name="grdGrid"
        ToolTip="Grid!">
        <Grid.ColumnDefinitions>
            <_
                Width="auto" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <_
                Width="auto" />
            <_
                Width="auto" />
            <_
                Width="auto" />
        </Grid.RowDefinitions>
        <Button
            Grid.="0 0"
            Content="I'm red!"
            Style="stybtnRed" />
    </Grid>
</Window>